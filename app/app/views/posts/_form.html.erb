
<%= form_for @post do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :body %>
		<%= f.text_field :body %>
	</div>
	<div>
		<%= f.label :url %>
		<%= f.text_field :url %>
	</div>
	
	<div class= "actions">
		<%= f.submit %>
	</div>
	<%= link_to "Cancel", :back, method: :get %>
<% end %>